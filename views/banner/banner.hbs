<section class="category d-flex mt-2">
    <div class="object-fit-contain mt-3" style="width: 98%;">
        <div class="header d-flex justify-content-between">
            <h3 class="h3 text-second fw-bold mb-3">Banners</h3>
            <a href="/admin/banners/new-banner" class="btn add-btn" style="height:40px;">New Banner</a>
        </div>
        <table style="width: 100rem;" id="example" class="table table-striped table-bordered table-sm" cellspacing="0"
            width="100%">
            <thead>
                <tr>
                    <th class="th-sm">Image</th>
                    <th class="th-sm">Name</th>
                    <th class="th-sm">Referense</th>
                    <th class="th-sm">Status </th>
                    <th class="th-sm">Delete/Edit</th>
                </tr>
            </thead>
            <tbody>
                {{#each banners}}
                <tr>
                    <td><img class="mx-auto d-block" width="100rem" src="/banners/{{this.image.filename}}" alt=""></td>
                    <td>{{this.banner_name}}</td>
                    <td><a href="{{this.reference}}">Check Referense</a></td>
                    {{#if this.banner_status}}
                    <td>List</td>
                    {{else}}
                    <td>Unlist</td>
                    {{/if}}
                    <td>
                        {{!-- edit category button --}}
                        <a href="/admin/banners/edit_banner/{{this._id}}" class="ms-3"><i
                                class="fa-solid fa-pen"></i></a>

                        <a class="text-danger ms-2">
                            <i style="cursor: pointer;" onclick="deleteBanner('{{this._id}}','{{this.image.filename}}')"
                                class="fa-solid fa-trash"></i>
                        </a>

                    </td>
                </tr>
                {{/each}}
            </tbody>
        </table>
    </div>
</section>