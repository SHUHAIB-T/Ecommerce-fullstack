<div class="container-fluid">
  <div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
    <ol class="carousel-indicators">
      <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
      <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
      <li data-target="#carouselExampleIndicators" data-slide-to="2"></li>
    </ol>
    <div class="carousel-inner">
      <div class="carousel-item active">
        <img class="d-block w-100"
          src="https://m.media-amazon.com/images/S/aplus-media/sota/1e0ce7d4-b768-431e-933b-bc8649062770._SR970,300_.jpg"
          alt="First slide">
      </div>
      <div class="carousel-item">
        <img class="d-block w-100" src="https://www.luxerwatches.ca/media/wysiwyg/blog-images/blog-fossil.jpg"
          alt="Second slide">
      </div>
      <div class="carousel-item">
        <img class="d-block w-100" src="https://iwpwatches.com/images/featured-image/1642057316.Artboard%203.jpg"
          alt="Third slide">
      </div>
    </div>
    <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
      <span class="carousel-control-prev-icon" aria-hidden="true"></span>
      <span class="sr-only">Previous</span>
    </a>
    <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
      <span class="carousel-control-next-icon" aria-hidden="true"></span>
      <span class="sr-only">Next</span>
    </a>
  </div>
  <hr>
  <div class="h3 text-center fw-bold">Watches</div>
  <hr>

  <div class="row">

    {{#each product}}
    <div class="card ms-3 mb-3 col-md-3">
      <img class="card-img-top" src="/productImages/{{this.primary_image.name}}" alt="Card image cap">
      <div class="card-body">
        <h5 class="card-title">{{this.product_name}}</h5>
        <p class="card-text">{{this.color}}
          <span class="fw-bold ms-4 text-success">₹{{this.selling_price}}</span>
          <span style="text-decoration: line-through;"
            class="fw-nomal ms-4 text-secondary">₹{{this.actual_price}}</span>
        </p>
        <div class="ms-4">
          <a href="/view_product/{{this._id}}" class="btn btn-warning">Buy Now</a>
        <a onclick="addToCart('{{this._id}}')" class="btn btn-secondary">Add to Cart</a>
        </div>
      </div>
    </div>
    {{/each}}
  </div>
</div>