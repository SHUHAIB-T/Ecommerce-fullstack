<section class="vh-100 gradient-custom">
    <div class="container py-5 h-100">
        <div class="row justify-content-center align-items-center h-100">
            <div class="col-12 col-lg-9 col-xl-7">
                <div class="card shadow-2-strong card-registration" style="border-radius: 15px;">
                    <div class="card-body p-4 p-md-5">
                        <h3 class="mb-4 pb-2 pb-md-0 mb-md-5">Registration Form</h3>
                        <form>

                            <div class="row">
                                <div class="col-md-6 mb-4">

                                    <div class="form-outline">
                                        <span id="Name-err" style="color: red;"></span>
                                        <input type="text" id="Name" placeholder="Enter your Name"
                                            class="form-control form-control-lg"autocomplete="on" />
                                        <label class="form-label" for="firstName">Name</label>
                                    </div>

                                </div>
                                <div class="col-md-6 mb-4">

                                    <div class="form-outline">
                                        <span id="Email-err" style="color: red;"></span>
                                        <input type="email" id="emailAddress" placeholder="Enter your email"
                                            class="form-control form-control-lg"autocomplete="on" />
                                        <label class="form-label" for="emailAddress">Email</label>
                                    </div>

                                </div>
                            </div>
                            <div class="row">
                                <div class="col-md-6 mb-4 pb-2">

                                    <div class="form-outline">
                                        <span id="Phone-err" style="color: red;"></span>
                                        <input type="text" placeholder="Enter your Phone Number" id="phoneNumber"
                                            class="form-control form-control-lg"autocomplete="on" />
                                        <label class="form-label" for="phoneNumber">Phone Number</label>
                                    </div>

                                </div>
                                <div class="col-md-6 mb-4 pb-2">

                                    <div class="form-outline">
                                        <span id="Pass-err" style="color: red;"></span>
                                        <input type="password" placeholder="Enter Password" id="Password"
                                            class="form-control form-control-lg"autocomplete="on" />
                                        <label class="form-label" for="emailAddress">Password</label>
                                    </div>

                                </div>
                            </div>
                            <div class="d-flex justify-content-center">
                                
                                <div id="otpinput" style="display: none;" class="form-outline mb-4">
                                    <h6 class="form-label labell fw-bold" for="form3Example3">Enter OTP send to <span
                                            id="Email-id"></span></h6>
                                    <div><span id="OTP-err" style="color: red;"></span></div>
                                    <input id="Otp-input" type="text" name="text"autocomplete="on" class="form-control form-control-lg"
                                        placeholder="Enter the otp here" />
                                </div>

                            </div>
                            <div class="pt-2 d-flex justify-content-center">
                                <button id="gen_btn" class="btn btn-primary btn-lg" type="submit" /> Genarate OTP</button>
                                <input id="clearBTN" class="ml-3 btn btn-secondary btn-lg" type="reset" autocomplete="on" value="Clear" />
                            </div>
                            <div  class="pt-2  d-flex justify-content-center">
                                <button style="display: none;" id="verify_btn" class="btn btn-primary btn-lg" type="submit" /> Verify OTP</button>
                            </div>

                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>