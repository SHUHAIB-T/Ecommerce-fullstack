<section class="category d-flex mt-2">
    <div class="object-fit-contain mt-3" style="width: 98%;">
        <div class="header d-flex justify-content-between">
            <h3 class="h3 text-second fw-bold mb-3">Coupens</h3>
            <a href="/admin/coupens/new-coupen" class="btn add-btn" style="height:40px;">New Coupen</a>
        </div>
        <table style="width: 100rem;" id="example" class="table table-striped table-bordered table-sm" cellspacing="0"
            width="100%">
            <thead>
                <tr>
                    <th class="th-sm">Coupen Code</th>
                    <th class="th-sm">Discription</th>
                    <th class="th-sm">Discount</th>
                    <th class="th-sm">Start Date</th>
                    <th class="th-sm">End Date</th>
                    <th class="th-sm">Used Count</th>
                    <th class="th-sm">Delete/Edit</th>
                </tr>
            </thead>
            <tbody>
                {{#each formattedCoupens}}
                <tr>
                    <td>{{this.coupon_code}}</td>
                    <td>{{this.discription}}</td>
                    <td>{{this.discount}}</td>
                    <td>{{this.start_date}}</td>
                    <td>{{this.exp_date}}</td>
                    <td>{{this.used_count}}</td>
                    <td>
                        {{!-- edit category button --}}
                        <a href="/admin/coupens/edit_coupen/{{this._id}}" class="ms-3"><i
                                class="fa-solid fa-pen"></i></a>

                        <a class="text-danger ms-2">
                            <i style="cursor: pointer;" onclick="deleteCoupen('{{this._id}}')"
                                class="fa-solid fa-trash"></i>
                        </a>

                    </td>
                </tr>
                {{/each}}
            </tbody>
        </table>
    </div>
</section>